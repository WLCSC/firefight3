<%= semantic_form_for(@service) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :name, required: true %>
    <%= f.input :url %>
    <%= f.input :description %>
    <%= f.input :service, as: :select, collection: Service.all %>
  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary btn-lg' } %>
    <% end %>
<% end %>
