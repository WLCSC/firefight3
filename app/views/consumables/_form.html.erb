<%= semantic_form_for(@consumable) do |f| %>
<%= f.semantic_errors %>

<%= f.inputs do %>
  <%= f.input :name, required: true %>
  <%= f.input :short, required: true %>
  <%= f.input :barcode, required: true %>
  <%= f.input :soft, required: true, label: "Soft Threshold" %>
  <%= f.input :hard, required: true, label: "Hard Threshold" %>
  <%= f.input :target, required: true, label: "Order Target" %>
<% end %>

<%= f.actions do %>
    <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary btn-lg' } %>
  <% end %>
<% end %>
