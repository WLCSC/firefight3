<%= semantic_form_for([@building, @room]) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :name, required: true %>
    <%= f.input :description %>
  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary btn-lg' } %>
    <% end %>
<% end %>
